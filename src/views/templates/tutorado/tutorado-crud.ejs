<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tutorado CRUD</title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- <link rel="stylesheet" href="/assets/css/main.css"> -->
</head>

<body>
    <!-- Form EJS -->
    <form id="formTutor" action="./crud" method="post">
        <input type="text" name="idTutor" id="idTutor">
        <input type="text" name="codigo" id="codigo" hidden>
        <input type="text" name="nombre" id="nombre">
        <input type="number" name="edad" id="edad">
        <input type="text" name="sexo" id="sexo">
        <button type="submit" id="btnGuardar" class="waves-effect waves-light btn">Guardar</button>
    </form>

    <!-- Table EJS -->
    <table>
        <thead>
            <th>
                <tr>
                    <td>ID Tutorado</td>
                    <td>ID Tutor</td>
                    <td>Codigo</td>
                    <td>Nombre</td>
                    <td>Edad</td>
                    <td>Sexo</td>
                    <td>Acciones</td>
                </tr>
            </th>
        </thead>
        <tbody>
            <% for(var i=0; i<records.length ;i++){ %>
                <tr>
                    <td>
                        <%=records[i]["idTutorado"] %>
                    </td>
                    <td>
                        <%=records[i]["idTutor"] %>
                    </td>
                    <td>
                        <%=records[i]["codigo"] %>
                    </td>
                    <td>
                        <%=records[i]["nombre"] %>
                    </td>
                    <td>
                        <%=records[i]["edad"] %>
                    </td>
                    <td>
                        <%=records[i]["sexo"] %>
                    </td>
                    <td>
                        <a class="waves-effect waves-light btn" href="/tutor/view/edit/<%=records[i][" idTutor"] %>
                            ">Editar</a>
                        <a class="waves-effect waves-light btn" href="">Eliminar</a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
    <script src="/assets/js/tutorado-crud.js"></script>
</body>

</html>