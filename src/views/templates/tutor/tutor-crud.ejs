<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tutor</title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- <link rel="stylesheet" href="/assets/css/main.css"> -->
</head>

<body>
    <!-- Form EJS -->
    <form id="formTutor" action="./crud" method="post">
        <input type="text" name="nombre" id="nombre">
        <input type="text" name="username" id="username">
        <input type="email" name="email" id="email">
        <input type="password" name="password" id="password">
        <button type="submit" id="btnGuardar" class="waves-effect waves-light btn">Guardar</button>
    </form>

    <!-- Table EJS -->
    <table>
        <thead>
            <th>
                <tr>
                    <td>#</td>
                    <td>Nombre</td>
                    <td>Username</td>
                    <td>Email</td>
                    <td>Password</td>
                    <td>Acciones</td>
                </tr>
            </th>
        </thead>
        <tbody id="bodyTutor">
            <% for(var i=0; i<records.length ;i++){ %>
                <tr>
                    <td>
                        <%=records[i]["idTutor"] %>
                    </td>
                    <td>
                        <%=records[i]["nombre"] %>
                    </td>
                    <td>
                        <%=records[i]["username"] %>
                    </td>
                    <td>
                        <%=records[i]["email"] %>
                    </td>
                    <td>
                        <%=records[i]["password"] %>
                    </td>
                    <td>
                        <a class="waves-effect waves-light btn" itemid="<%= records[i]["idTutor"] %>" id="btnEdit">Editar</a>
                        <a class="waves-effect waves-light btn" itemid="<%= records[i]["idTutor"] %>" id="btnDelete">Eliminar</a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
        <script src="/assets/js/http.js"></script>
        <script src="/assets/js/tutor-crud.js"></script>
</body>

</html>